    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: g++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            //"program": "${workspaceRoot}/${fileBasenameNoExtension}",
            "program": "${workspaceFolder}/xapian/xapian_networked_server",
            "args": ["-n", "1", "-d", "/home/vmlvs/tailbench.inputs/xapian/wiki", "-r", "100000000"],
            //"stopAtConnect": false,
            "cwd": "${workspaceFolder}",
            "env": [{
                    "TBENCH_MAXREQS": 5000000,
                    "TBENCH_WARMUPREQS": 0,
                    "LD_LIBRARY_PATH":"/home/vmlvs/Tailbench/tailbench/xapian/xapian-core-1.2.13/install/lib"
                }
            ],
            //"externalConsole": false,
            //"MIMode": "gdb",
            //"miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printng",
                    "ignoreFailures": true
                },
                {
                    "description": "Additional libs for gdb",
                    "text": "set environment LD_LIBRARY_PATH=/home/vmlvs/Tailbench/tailbench/xapian/xapian-core-1.2.13/install/lib",
                    "ignoreFailures": false
                },
            ],
            //"preLaunchTask": "C/C++: g++ build active file"
        }
    ]
}